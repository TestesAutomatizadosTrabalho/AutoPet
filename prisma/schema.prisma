model User {
  id    String   @id @default(uuid())
  email String   @unique
  nome  String
  cep   String
  pets  Pet[]
}

model Pet {
  id     String   @id @default(uuid())
  nome   String
  raca   String
  dono   User     @relation(fields: [donoId], references: [id])
  servicos Servico[]
}

model Servico {
  id       String   @id @default(uuid())
  tipo     String
  data     DateTime
  petId    String
  pet      Pet      @relation(fields: [petId], references: [id])
}
